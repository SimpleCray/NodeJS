extends ../layouts/layouts
block content
    br
    h1.alert.alert-success(style="text-align: center") Register
    if errors
        div.col-lg-2
        each error in errors
            .alert.alert-danger=error
    form(action="/users/create", method="POST")
        .form-group
            label Email
            input.form-control(name="email", type='email' placeholder='Enter email' value =values ? values.email: '')
            small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
        .form-group
            label Password
            input.form-control(name="password", type='password' placeholder='Enter password')
        .form-group
            label Confirm Password
            input.form-control(name="confirmPassword", type='password' placeholder='Re-Enter password')
        .form-group
            label Phone
            input.form-control(name="phone", type='number' placeholder='Enter Phone Number' value =values ? values.phone: '')
        .form-check
            input.form-check-input(type='checkbox')
            label.form-check-label Check me out
        button.btn.btn-primary(type='submit') Submit